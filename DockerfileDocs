FROM sphinxdoc/sphinx:7.3.7
WORKDIR .
# Copy source code for autodoc:
COPY ./src/ ./src/
# Copy the repositories requirements.txt and package installation files:
COPY requirements.txt ./requirements.txt
COPY setup.py ./setup.py
COPY pyproject.toml ./pyproject.toml
# TODO: Edit this file and install any relevant os-level packages required to build the documentation for your repo:
# =========================== For numpy: ===========================
# RUN apt update
# Install GCC and other c-lib dependencies:
# RUN apt install build-essential -y
# ==================================================================
# NOTE: Do not remove the lines below this comment:
# Install the repository's package:
RUN pip3 install .
# Copy documentation source files:
COPY ./docs/source/ ./docs/source/
COPY ./docs/requirements.txt ./docs/requirements.txt
# Install documentation specific requirements:
RUN pip3 install -r ./docs/requirements.txt
CMD ["sphinx-build", "-M", "html", "./docs/source" ,"./docs/build"]