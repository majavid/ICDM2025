# Start from slim, good for reproducibility and speed
FROM python:3.10-slim

# Prevent interactive prompts during apt installs
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# System deps (minimal). Add more only if actually needed.
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    graphviz \
 && rm -rf /var/lib/apt/lists/*

# Workdir
WORKDIR /app

# Copy dependency lists first (better Docker layer caching)
COPY requirements.txt ./
COPY docs/requirements.txt ./docs/requirements.txt

# Install Python deps (runtime + docs)
RUN python -m pip install --upgrade pip \
 && pip install -r requirements.txt \
 && pip install -r docs/requirements.txt

# Copy the rest of the repo
COPY . .

# Default command: show help or run a small check
CMD ["python", "-c", "import numpy, scipy, pandas, networkx; print('env ok')"]
